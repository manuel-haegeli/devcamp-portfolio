<%= form_with(model: @portfilio_item, local: true) do |form| %>
  <div class="form-group">
  <% if @portfilio_item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@portfilio_item.errors.count, "error") %> prohibited this portfolio from being saved:</h2>

      <ul>
      <% @portfilio_item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="field">
      <%= form.label :subtitle %>
      <%= form.text_field :subtitle, class: 'form-control' %>
    </div>

    <div class="form-group">
      <div class="field">
        <%= form.label :main_image %>
        <%= form.file_field :main_image, class: 'form-control-file' %>
      </div>
    </div>

    <div class="form-group">
      <div class="field">
        <%= form.label :thumbnail_image %>
        <%= form.file_field :thumbnail_image, class: 'form-control-file' %>
      </div>
    </div>

    <div class="field">
      <%= form.label :body %>
      <%= form.text_area :body, class: 'form-control', rows: 10 %>
    </div>
  </div>
  <div class="form-group">
    <h2>Technologies</h2>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %>
    </div>
    <%= link_to_add_association 'Add Technology', form, :technologies %>
  </div>
  <%= form.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
