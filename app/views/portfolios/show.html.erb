<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfilio_item.main_image.to_s, width: '100%' unless @portfilio_item.main_image.nil? %>
    </div>
    <div class="col-md-57">
      <h1><%= @portfilio_item.title %></h1>
      <%= link_to 'Edit', edit_portfolio_path(@portfilio_item) if logged_in?(:site_admin) %>
      <hr/>
      <em><%= @portfilio_item.subtitle %>:</em>
      <p><%= @portfilio_item.body %></p>

      <h3>Technologies Used:</h3>
      <ul>
      <%@portfilio_item.technologies.each do |technology| %>
        <li><%= technology.name %></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>